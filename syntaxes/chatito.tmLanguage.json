{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Chatito",
	"patterns": [
		{
			"include": "#imports"
		},
		{
			"include": "#entities"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"imports": {
			"patterns": [{
				"comment": "Import statement",
				"name": "keyword.control",
				"match": "^import\\s+(.*)$",
				"captures": {
					"1": {
						"name": "string"
					}
				}
			}]
		},
		"entities": {
			"patterns": [{
				"comment": "Invalid use of question mark in alias definition",
				"name": "entity.name.function",
				"match": "^~\\[.*?(\\?)\\]",
				"captures": {
					"1": {
						"name": "invalid"
					}
				}
			}, {
				"comment": "Correct probability operator",
				"name": "keyword.control",
				"match": "^    \\*\\[\\d{1,3}]"
			}, {
				"comment": "Invalid probability operator",
				"name": "invalid",
				"match": "\\*\\[.*?]"
			}, {
				"comment": "Alias",
				"name": "entity.name.function",
				"match": "~\\[.*?(#.+?)?\\]",
				"captures": {
					"1": {
						"name": "entity.other.attribute-name"
					}
				}
			}, {
				"comment": "Slot",
				"name": "entity.name.tag",
				"match": "@\\[.*?(#.+?)?\\](\\(\\s*('.+?'|\".+?\")\\s*:\\s*('.+?'|\".+?\")\\s*(,\\s*('.+?'|\".+?\")\\s*:\\s*('.+?'|\".+?\")\\s*)*\\))?",
				"captures": {
					"1": {
						"name": "entity.other.attribute-name"
					},
					"3": {
						"name": "variable"
					},
					"4": {
						"name": "string"
					},
					"6": {
						"name": "variable"
					},
					"7": {
						"name": "string"
					}
				}
			}, {
				"comment": "Intent definition",
				"name": "entity.name.type",
				"match": "^%\\[.*?\\](\\(\\s*('.+?'|\".+?\")\\s*:\\s*('.+?'|\".+?\")\\s*(,\\s*('.+?'|\".+?\")\\s*:\\s*('.+?'|\".+?\")\\s*)*\\))?",
				"captures": {
					"2": {
						"name": "variable"
					},
					"3": {
						"name": "string"
					},
					"5": {
						"name": "variable"
					},
					"6": {
						"name": "string"
					}
				}
			}]
		},
		"comments": {
			"begin": "^(//|#)",
			"end": "\\n",
			"name": "comment",
			"patterns": []
		}
	},
	"scopeName": "source.chatito"
}
